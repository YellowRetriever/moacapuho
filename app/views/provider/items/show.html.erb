<div class="container" >
    <div class="alert alert-info" role="alert"><h1>登録したカップホルダー情報</h1></div>
    
    <% if @item.images.attached? %>
     <% @item.images.each do |image| %>
    <%= image_tag image %>
     <% end %>
    <% end %>
    <%= show_count %>
       <h1 class="p-3 mb-2 bg-dark text-white"><%= @item.name %></h1>
          <p class="float-right">在庫：<%= @item.status_i18n %></p>
          <p class="text-center"><%= @item.text %></p>
          <%= link_to "戻る", provider_items_path %>
</div>

 

  
        